/* pages/projectDetail/projectDEtail.wxss */
.container {
  padding: 20px;
}

.project-header {
  display: flex;
  align-items: center;
}

.project-image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-right: 20px;
}

.project-name {
  font-size: 24px;
  font-weight: bold;
}

.project-intro {
  margin-top: 10px;
  font-size: 16px;
}

.members-teachers {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
}

.members-section, .teachers-section {
  flex: 1;
}

.members-box, .teachers-box {
  background-color: rgb(89, 151, 233); /* 蓝色背景 */
  border-radius: 10px;
  padding: 10px;
  margin-bottom: 10px;
  margin-left: 20px;
  position: relative;
  right: 30px;
}

.members-text, .teachers-text {
  color: white;
  font-weight: bold;
  position: relative;
  
}

.members-list, .teacher-info {
  margin-top: 5px;
}

.leader-info {
  display: flex;
  align-items: center;
  margin-top: 5px;
  margin-bottom: 5px; /* 增加间隔 */
}

.member-info {
  display: flex;
  align-items: center;
  margin-top: 5px;
}

.spacing{
  height: 20px; /* 间隔高度  */
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 5px;
}

.status {
  margin-top: 10px;
}

.apply-button {
  margin-top: 20px;
  background-color: #005bb5;
  color: #ffffff;
  padding: 10px;
  border-radius: 5px;
}
.a{
  position: relative;
  bottom: 15px;
}
