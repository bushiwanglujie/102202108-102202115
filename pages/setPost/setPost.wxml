<text class="text">请编辑帖子内容</text>
<view class="container">
  <view class="input-group">
    <input type="text" placeholder="请输入帖子标题..." bindinput="onTitleInput" />
  </view>
  
  <view class="input-group">
    <textarea placeholder="请输入帖子内容..." bindinput="onContentInput"></textarea>
  </view>

  <view class="input-group">
    <input type="text" placeholder="输入标签（用空格分隔）..." bindinput="onTagsInput" />
  </view>

  <button class="button" bindtap="submitPost">发布</button>
</view>
