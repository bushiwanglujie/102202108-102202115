.container {
  height: 100%;
  width: 100%;
}
.community{
  width: 80%;
  height: 300px;
  padding: 10px;
  position: relative;
  bottom: 60px;
}
.post-list {
  margin-top: 10rpx;

}

.post-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  border-bottom: 1px solid #eee;
  padding: 10rpx;
  background-color: rgb(219, 242, 250);
  width: 100%;
  height: 100px;
  border-radius: 5px;
  position: relative;
  right: 5px;
}

.avatar {
  width: 43px;
  height: 43px;
  border-radius: 50%;
  margin-right: 10rpx;
  position: relative;
  bottom:20px;
}

.post-info {
  flex: 1;
}

.username {
  font-weight: bold;
  position: relative;
  bottom:30px;
}

.time {
  color: #999;
  font-size: 12px;
  position: relative;
  bottom:10px;
  right:30px;
}

.title {
  font-size: 16px;
  font-weight: bold;
  position: relative;
  top:20px;
  right: 150px;
}

.content {
  font-size: 14px;
  color: #666;
  position: relative;
  top:20px;
  right: 150px;
}

/* 搜索栏容器 */  
.search-bar-container {  
  display: flex;  
  align-items: center;  
  border: 1px solid #ddd;  
  padding: 10px;  
  border-radius: 5px;  
  background-color: #fff;
  position: relative;
  bottom: 80px; 
  width: 87%; 
  height: 20%;
}  
  
/* 搜索图标 */  
.search-icon {  
  width: 35px;  
  height: 35px;  
  margin-right: 10px;  
}  
  
/* 搜索输入框 */  
.search-input {  
  flex: 1;  
  padding: 0 10px;  
  border: none;  
  box-sizing: border-box;  
  font-size: 16px;
}  
  
/* 搜索按钮 */  
.search-button {  
  padding: 5px 10px;  
  background-color:#005bb5;
  color: #ffffff;  
  border: none;  
  border-radius: 0 5px 5px 0; /* 圆角只应用于右侧 */  
  font-size: 16px;  
  margin-left: 10px;  
}

.button { 
  background-color: #005bb5;   
  border: none;
  text-align: center;
  color: #ffffff;
  position: relative;
  top:50px;
}

.buttonmore {
  background-color:rgb(165, 207, 233) ; 
  border: none;
  text-align: center;
  color: #00000073;
  font-size: 12px;
  position: relative;
  top:40px;
}



