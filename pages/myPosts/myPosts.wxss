/* pages/myPosts/myPosts.wxss */
.container {  
  padding: 20px;  
}  

.title {  
  font-size: 20px;  
  font-weight: bold;  
  text-align: center;  
  margin-bottom: 20px;  
}  
  
.button-group { 
  margin-top: 10px; 
  margin-bottom: 20px;  
  margin-left: 20px;
  margin-right: 20px;
  display: flex;  
  justify-content: space-evenly;  
}  
  
button {  
  width: 35%;  
  padding: 10px;  
  font-size: 16px; 
  background-color: white; 
}  

/* 选中状态的按钮样式 */  
.button-selected {  
  background-color: #007aff; /* 选中后的背景色 */  
  color:crimson; /* 选中后的文字颜色 */  
}  
  

.post-list {  
  height: 500px;
  margin-top: 50px;
  background-color: #ffffff;
}  

.post-item {  
  height: 100px;
  border-bottom: 1px solid #eee;  
  padding: 10px 0;  
  display: flex;  
  align-items: center;  
}  
  
.post-avatar {  
  width: 50px;  
  height: 50px;  
  border-radius: 50%;  
  position: relative;
  bottom: 28px;
  left:20px;
}  
.post-name {   
  font-size: 15px;
  font-weight: bold;
  position: relative;
  bottom: 38px;
  left:38px;
}   
.post-content { 
  position: relative;
  top: 20px;
  right:35px;
  flex: 1;  
  font-size: 16px;
}  
  
.post-footer {  
  font-size: 13px;  
  color: #999; 
  position: relative;
  bottom: 18px;
  left:30px;
}