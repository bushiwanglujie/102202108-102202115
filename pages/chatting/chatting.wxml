<!--pages/chatting/chatting.wxml-->
<view class="container">
  <!-- 顶部导航栏，显示群聊名称 -->
  <view class="chat-title">{{chatName}}</view>
  <!-- 聊天记录展示 -->
  <scroll-view class="chat-content" scroll-y="true">
    <view wx:for="{{messages}}" wx:key="id" class="message-item">
      <!-- 如果不是当前用户，消息显示在左边 -->
      <view class="message-left" wx:if="{{!item.isMe}}">
        <image class="avatar" src="{{item.avatarUrl}}" />
        <view class="message-bubble left">
          <text class="message-text">{{item.content}}</text>
        </view>
      </view>

      <!-- 如果是当前用户，消息显示在右边 -->
      <view class="message-right" wx:if="{{item.isMe}}">
        <view class="message-bubble right">
          <text class="message-text">{{item.content}}</text>
        </view>
        <image class="avatar" src="{{item.avatarUrl}}" />
      </view>
    </view>
  </scroll-view>

  <!-- 底部输入框 -->
  <view class="input-section">
    <input type="text" placeholder="输入消息..." bindinput="onInput" value="{{inputValue}}" />
    <button bindtap="sendMessage">发送</button>
  </view>
</view>
