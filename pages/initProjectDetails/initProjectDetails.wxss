/* pages/initProjectDetails/initProjectDetails.wxss */
/* 容器样式 */  
.container {
  padding: 20px;
}

.project-header {
  display: flex;
  align-items: center;
}

.project-image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-right: 20px;
}

.project-name {
  font-size: 24px;
  font-weight: bold;
}

.project-intro {
  margin-top: 10px;
  font-size: 16px;
}

.members-teachers {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
}

.members-section, .teachers-section {
  flex: 1;
}

.members-box, .teachers-box {
  background-color: rgb(89, 151, 233); /* 蓝色背景 */
  border-radius: 10px;
  padding: 10px;
  margin-bottom: 10px;
  margin-left: 20px;
}

.members-text, .teachers-text {
  color: white;
  font-weight: bold;
}

.members-list, .teacher-info {
  margin-top: 5px;
}

.leader-info {
  display: flex;
  align-items: center;
  margin-top: 5px;
  margin-bottom: 5px; /* 增加间隔 */
}

.member-info {
  display: flex;
  align-items: center;
  margin-top: 5px;
}

.spacing{
  height: 20px; /* 间隔高度  */
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 5px;
}

/* 进度条容器 */  
.progress-bar {  
  margin-top: 10px;
  margin-bottom: 10px;  
  background-color: #e0e0e0;  
  border-radius: 5px;  
  overflow: hidden; 
  width:80% ;
}  
  
/* 进度条文本 */  
.progress-bar text {  
  display: block;  
  padding: 10px;  
  font-size: 16px;  
  color: #333;  
  background-color:#76c7c0;  
  border-top-left-radius: 5px;  
  border-top-right-radius: 5px;  
}  
  
/* 进度条背景 */  
.progress-bar .bar {  
  height: 30px;  
}  
  
/* 已填充的进度条 */  
.progress-bar .filled {  
  height: 100%;  
  background-color: #76c7c0;  
  transition: width 0.3s ease;  
}  

/* 状态选择器容器 */  
.status {  
  margin-top: 20px;  
}  
  
/* 状态选择器文本 */  
.status text {  
  display: inline-block;  
  margin-right: 10px;  
  font-size: 16px;  
  color: #333;  
}  
  
/* 自定义picker样式（由于picker的自定义样式有限，这里主要调整其包含的视图） */  
.picker {  
  border: 1px solid #ddd;  
  padding: 10px;  
  font-size: 16px;  
  border-radius: 5px;  
  background-color:#76c7c0;  
}  

  
/* 聊天按钮样式 */  
.chat-button-container {  
  text-align: center;  
}  
  
button {
  margin-top: 20px;  
  padding: 10px 20px;  
  background-color: rgb(219, 242, 250);  
  color: black;  
  border: none;  
  border-radius: 5px;  
  font-size: 16px;  
}