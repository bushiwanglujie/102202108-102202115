.container {  
  padding: 20px;  
}  
  
.title {  
  font-size: 24px;  
  font-weight: bold;  
  text-align: center;  
  margin-bottom: 20px;  
}  
  
.form-row {  
  display: flex;  
  margin-bottom: 20px;  
   
}  
  
.form-label {  
  flex: 3;  
  font-size: 16px;  
  font-weight: bold; 
  margin-left: 2px; 
  margin-right: 10px;
  position: relative;
  left:30px;  
}  
  
.form-input{
  background-color: #ffffff;
  width: 60%;
  border: 1px solid black;
}  
.form-textarea {  
  flex: 5;  
  padding: 2px;  
  box-sizing: border-box;  
  border: 1px solid black;  
  border-radius: 4px;  
  font-size: 16px; 
  background-color: #ffffff;
}  
  

  
.form-button-row {  
  display: flex;  
  justify-content: center;  
  margin-top: 20px;  
}  
  
button {  
  padding: 10px 20px;  
  background-color:#005bb5;  
  color: #ffffff;  
  border: none;  
  border-radius: 4px;  
  font-size: 16px;  
}