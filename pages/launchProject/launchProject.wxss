.container {
  padding: 5px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}

.input-section {
  display: flex;
  margin-bottom: 15px;
}

.label {
  text-align: center;
  font-size: 16px;
  margin-bottom: 5px;
}

.input-field {
  flex-direction: column;
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 10px;
  background-color: #fff;
  font-size: 14px;
  text-align: left;
}

.textarea-field {
  width: 100%;
  height: 100px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 10px;
  background-color: #fff;
  font-size: 14px;
  text-align: left;
}

button {
  width: 100%;
  padding: 10px;
  border-radius: 10px;
  text-align: center;
  font-size: 16px;
  margin-top: 20px;
}