/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 设置全局背景色 */  
page {  
  background-color:rgb(165, 207, 233); /* 浅蓝色背景，与图片背景相似 */  
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;  
}  
  
/* 通用按钮样式 */  
.btn {  
  padding: 10px 20px;  
  margin: 10px;  
  background-color: #007aff;  
  color: white;  
  border-radius: 5px;  
  text-align: center;  
  display: inline-block;  
  font-size: 16px;  
}
